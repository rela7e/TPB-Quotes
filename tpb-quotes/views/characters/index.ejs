<%- include('../partials/header') %>
<table>
<thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% characters.forEach(function(c) { %>
      <tr>
        <td><%= c.name %></td>
        <td><%= c.description %></td>
        <td><a href="/characters/<%= c._id %>">View Details</a></td>
        <td><form action="/characters/<%= c.id %>?_method=DELETE"
          class="delete-form" method="POST">
          <button type="submit">X</button>
        </form></td>
      </tr>
      <% }); %>
    </tbody>
</table>


<%- include('../partials/footer') %>